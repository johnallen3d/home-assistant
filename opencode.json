{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "home-assistant": {
      "type": "local",
      "command": ["uvx", "ha-mcp@latest"],
      "environment": {
        "HOMEASSISTANT_URL": "http://homeassistant:8123",
        "HOMEASSISTANT_TOKEN": "{env:HOME_ASSISTANT_API_KEY}"
      },
      "enabled": true
    }
  }
}
